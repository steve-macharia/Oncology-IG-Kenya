  "description": "A Condition profile for structured oncology diagnosis documentation in Kenya, aligned with national cancer registry reporting and HL7® FHIR® standards.",
  "jurisdiction": [
    {
      "coding": [
        {
          "system": "http://unstats.un.org/unsd/methods/m49/m49.htm",
          "code": "404",
          "display": "Kenya"
        }
      ]
    }
  ],
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "Condition",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Condition",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Condition.clinicalStatus",
        "path": "Condition.clinicalStatus",
        "short": "Active, recurrence, remission, resolved",
        "definition": "The clinical status of the condition, required for longitudinal tracking and outcomes.",
        "min": 1,
        "mustSupport": true,
        "binding": {
          "strength": "required",
          "valueSet": "http://hl7.org/fhir/ValueSet/condition-clinical"
        }
      },
      {
        "id": "Condition.category",
        "path": "Condition.category",
        "short": "Kenya-specific condition categories",
        "definition": "Clinical grouping of condition as defined in Kenyan clinical policy or registry definitions.",
        "mustSupport": true,
        "binding": {
          "strength": "extensible",
          "valueSet": "http://terminology.health.go.ke/ValueSet/condition-category-kenya"
        }
      },
      {
        "id": "Condition.severity",
        "path": "Condition.severity",
        "short": "Severity level (e.g., mild, moderate, severe)",
        "definition": "Clinical severity of the cancer at diagnosis or during follow-up.",
        "mustSupport": true,
        "binding": {
          "strength": "preferred",
          "valueSet": "http://hl7.org/fhir/ValueSet/condition-severity"
        }
      },
      {
        "id": "Condition.code",
        "path": "Condition.code",
        "short": "ICD-10 diagnosis code",
        "definition": "Diagnosis code for oncology condition using ICD-10 classification.",
        "min": 1,
        "mustSupport": true,
        "binding": {
          "strength": "required",
          "valueSet": "http://hl7.org/fhir/sid/icd-10"
        }
      },
      {
        "id": "Condition.onset[x]",
        "path": "Condition.onset[x]",
        "short": "Onset date/time or period",
        "definition": "Mandatory onset information for surveillance and clinical relevance.",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Condition.recordedDate",
        "path": "Condition.recordedDate",
        "short": "Date of documentation",
        "definition": "The date the condition was first recorded in the system.",
        "min": 1,
        "mustSupport": true
      }
    ]
  }
}
