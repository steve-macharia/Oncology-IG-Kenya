{
  "resourceType": "StructureDefinition",
  "id": "oncology-kenya-patient",
  "url": "http://example.org/StructureDefinition/oncology-kenya-patient",
  "name": "OncologyKenyaPatient",
  "title": "Oncology Kenya Patient",
  "status": "draft",
  "description": "Customized patient profile for oncology care in Kenya, aligned with SHA, DHIS2, and national cancer registries. Ensures compliance with Kenyan Ministry of Health registration standards.",
  "fhirVersion": "4.0.1",
  "kind": "resource",
  "abstract": false,
  "type": "Patient",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Patient",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Patient",
        "path": "Patient",
        "constraint": [
          {
            "key": "pat-1",
            "severity": "error",
            "human": "Must have at least one given name and one family name",
            "expression": "name.given.exists() and name.family.exists()",
            "source": "http://example.org/StructureDefinition/oncology-kenya-patient"
          },
          {
            "key": "pat-2",
            "severity": "error",
            "human": "telecom must include both system and value",
            "expression": "telecom.system.exists() and telecom.value.exists()",
            "source": "http://example.org/StructureDefinition/oncology-kenya-patient"
          },
          {
            "key": "pat-3",
            "severity": "error",
            "human": "If contact is present, it must have relationship and name",
            "expression": "contact.relationship.exists() and contact.name.exists()",
            "source": "http://example.org/StructureDefinition/oncology-kenya-patient"
          },
          {
            "key": "pat-4",
            "severity": "error",
            "human": "address must have line, district, and state",
            "expression": "address.line.exists() and address.district.exists() and address.state.exists()",
            "source": "http://example.org/StructureDefinition/oncology-kenya-patient"
          }
        ]
      },
      {
        "id": "Patient.extension",
        "path": "Patient.extension",
        "slicing": {
          "discriminator": [
            {
              "type": "value",
              "path": "url"
            }
          ],
          "ordered": false,
          "rules": "open"
        }
      },
      {
        "id": "Patient.extension:nationality",
        "path": "Patient.extension",
        "sliceName": "nationality",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "http://hl7.org/fhir/StructureDefinition/patient-nationality"
            ]
          }
        ]
      },
      {
        "id": "Patient.extension:educationLevel",
        "path": "Patient.extension",
        "sliceName": "educationLevel",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "https://oncology.ig.kenya/StructureDefinition/patient-educationLevel"
            ]
          }
        ]
      },
      {
        "id": "Patient.extension:occupation",
        "path": "Patient.extension",
        "sliceName": "occupation",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "https://oncology.ig.kenya/StructureDefinition/patient-occupation"
            ]
          }
        ]
      },
      {
        "id": "Patient.identifier",
        "path": "Patient.identifier",
        "slicing": {
          "discriminator": [
            {
              "type": "pattern",
              "path": "system"
            }
          ],
          "rules": "open"
        },
        "short": "At least National ID and SHA ID must be provided",
        "min": 2,
        "mustSupport": true
      },
      {
        "id": "Patient.identifier:nationalID",
        "path": "Patient.identifier",
        "sliceName": "nationalID",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Patient.identifier:nationalID.system",
        "path": "Patient.identifier.system",
        "min": 1,
        "fixedUri": "http://gov.ke/national-id"
      },
      {
        "id": "Patient.identifier:nationalID.value",
        "path": "Patient.identifier.value",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Patient.identifier:shaID",
        "path": "Patient.identifier",
        "sliceName": "shaID",
        "min": 1,
        "max": "1",
        "mustSupport": true
      },
      {
        "id": "Patient.identifier:shaID.system",
        "path": "Patient.identifier.system",
        "min": 1,
        "fixedUri": "https://sha.go.ke/ids/patient"
      },
      {
        "id": "Patient.identifier:shaID.value",
        "path": "Patient.identifier.value",
        "min": 1,
        "mustSupport": true
