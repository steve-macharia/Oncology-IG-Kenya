        "mustSupport": true
      },
      {
        "id": "Patient.address.country",
        "path": "Patient.address.country",
        "fixedString": "KE"
      },
      {
        "id": "Patient.maritalStatus",
        "path": "Patient.maritalStatus",
        "binding": {
          "strength": "extensible",
          "valueSet": "http://terminology.health.go.ke/ValueSet/marital-status-kenya"
        }
      },
      {
